 @model LoginViewModel
 <div class="d-flex align-items-center vh-200">

	<div class="mx-auto text-center shadow-lg bg-white rounded p-5 my-5">

		
		<form asp-controller="Account" asp-action="Login" method="post" class="form-signin" role="form">
			<i class="fa fa-users mb-2 fs-1"></i>

			<input type="hidden" asp-for="ReturnUrl" />
			<h1 class="h3 mb-3 font-weight-normal">Entrar com</h1>
			
			<label asp-for="Email" class="sr-only">E-mail</label>
			<input type="email" id="username" class="form-control" placeholder="Usuário" name="username" required>

			<label asp-for="Password" class="sr-only">Password</label>
			<input type="password" id="password" class="form-control" placeholder="Senha" name="password" required>

			<button class="btn btn-lg btn-primary w-100 btn-block" type="submit">Entrar</button>
			<p class="mt-4 mb-2 text-muted">Não tem login? Cadastre-se abaixo</p>
			<a class="btn btn-lg btn-link btn-block" routerLink="/user/registration">Quero me cadastrar</a>

			 <div asp-validation-summary="All" class="text-danger"></div>
		</form>

	</div>

</div>


    
